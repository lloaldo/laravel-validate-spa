{
    "name": "lloaldo/laravel-validate-spa",
    "description": "Spanish Custom Validation Package for Laravel CIF, NIF, NIE, NSS, IBAN, Postal Code, Phone numbers, License plate...",
    "keywords": [
        "php",
        "laravel-validate-spa",
        "package"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Domingo Alb√∫jar",
            "email": "dmingoalb@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/support": "^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13.7",
        "orchestra/testbench": "^9.11.0",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10.50",
        "rector/rector": "^0.18.13",
        "symfony/var-dumper": "^6.4.0|^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "Lloaldo\\LaravelValidateSpa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lloaldo\\LaravelValidateSpa\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lloaldo\\LaravelValidateSpa\\ValidationServiceProvider"
            ]
        }
    }
}
